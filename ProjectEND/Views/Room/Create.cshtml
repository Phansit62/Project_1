@model ProjectEND.Models.Room

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}



<form action="@Url.Action("Create","Room")" method="post">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>เพิ่มห้องพัก</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="col-md-10">
        <input name="num" class="form-control" placeholder="จำนวนห้อง" />
    </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CateP_id, "ราคา", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CateP_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CateP_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Doc_id, "หอ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Doc_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Doc_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ตกลง" class="btn btn-primary" />
                <a class="btn btn-danger" href="@Url.Action("Admin_Index","Room")">กลับ</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
