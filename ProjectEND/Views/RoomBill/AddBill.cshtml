@model ProjectEND.Models.RoomBill

@{
    ViewBag.Title = "AddBill";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<form action="@Url.Action("AddBill","RoomBill")" method="post">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>เพิ่มบิลค่าใช้จ่าย</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Order_Id, "เลขใบสั่งซื้อ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Order_id", null, "---เลือกห้องพัก---", htmlAttributes: new { @class = "form-control", onChange = "this.form.submit()" })
                @Html.ValidationMessageFor(model => model.Order_Id, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-10">
            <p>ชื่อ</p>
            <p class="form-control"> @ViewBag.fname</p>
            <p>นามสกุล</p>
            <p class="form-control"> @ViewBag.lname</p>
            <p>ห้อง</p>
            <p class="form-control"> @ViewBag.room</p>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Water, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Water, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Water, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Ele, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Ele, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ele, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Bill_Date_Out, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Bill_Date_Out, new { htmlAttributes = new {@Value = DateTime.Now.ToString("yyyy/MM/dd"), @class = "form-control",@readonly="true" } })
                @Html.ValidationMessageFor(model => model.Bill_Date_Out, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ตกลง" class="btn btn-primary" />
                <a class="btn btn-danger" href="@Url.Action("Index","RoomBill")">กลับ</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
